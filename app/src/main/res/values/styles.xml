<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <!--<item name="android:windowActivityTransitions">true</item>-->
    </style>

    <style name="SearchViewTheme" parent="Theme.AppCompat">
        <item name="android:dropDownListViewStyle">@style/SearchViewDropDownListViewStyle</item>
        <item name="android:dropDownItemStyle">@style/RecentSearchItemStyle</item>
    </style>

    <style name="SearchViewDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/mainActivityBackground</item>
    </style>

    <style name="RecentSearchItemStyle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
    <!--</style>-->

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoRegularMenuItemStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular_res</item>
    </style>
    
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="Divider.WordDivider" parent="Divider">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#D5D8DC</item>
    </style>

</resources>
